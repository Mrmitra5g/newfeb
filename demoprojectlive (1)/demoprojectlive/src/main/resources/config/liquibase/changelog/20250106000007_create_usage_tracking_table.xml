<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20250106000007-1" author="yourname">
        <createTable tableName="usage_tracking">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="org_id" type="BIGINT"/>
            <column name="user_id" type="BIGINT"/>
            <column name="request_url" type="VARCHAR(255)"/>
            <column name="request_body" type="TEXT"/>
            <column name="request_header" type="TEXT"/>
            <column name="service_request_url" type="VARCHAR(255)"/>
            <column name="service_request_body" type="TEXT"/>
            <column name="service_request_header" type="TEXT"/>
            <column name="service_response" type="TEXT"/>
            <column name="service_response_code" type="VARCHAR(20)"/>
            <column name="response_body" type="TEXT"/>
            <column name="response_code" type="VARCHAR(20)"/>
            <column name="is_deleted" type="BOOLEAN" defaultValue="false"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="created_on" type="TIMESTAMP"/>
            <column name="updated_on" type="TIMESTAMP"/>
            <column name="deleted_on" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
