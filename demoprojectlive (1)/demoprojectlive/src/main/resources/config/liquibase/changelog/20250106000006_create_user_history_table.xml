<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20250106000006-1" author="yourname">
        <createTable tableName="user_history">
            <column name="user_history_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="org_id" type="BIGINT"/>
            <column name="org_sfid" type="VARCHAR(255)"/>
            <column name="user_sfid" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(20)"/>
            <column name="active" type="BOOLEAN" defaultValue="true"/>
            <column name="registration_date" type="TIMESTAMP"/>
            <column name="is_deleted" type="BOOLEAN" defaultValue="false"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="created_on" type="TIMESTAMP"/>
            <column name="updated_on" type="TIMESTAMP"/>
            <column name="deleted_on" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
